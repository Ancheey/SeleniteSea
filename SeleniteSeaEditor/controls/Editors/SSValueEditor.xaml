<Border x:Class="SeleniteSeaEditor.controls.Editors.SSValueEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SeleniteSeaEditor.controls.Editors"
             mc:Ignorable="d" 
         BorderThickness="0.2"
        BorderBrush="Black"
         Background="#232133"
        Height="38"
             d:DesignHeight="38" d:DesignWidth="150">
    <Grid>
        <StackPanel>
            <Label x:Name="ValueName" Content="Value Title" FontSize="10" Margin="3,-3,0,0" Foreground="LightGray"/>
            <TextBox x:Name="ValueText" AcceptsReturn="False" AcceptsTab="False" Background="#181924" BorderBrush="Black" BorderThickness="0.5" Margin="3,-3,3,3" Foreground="LightGray"/>
        </StackPanel>
    </Grid>
</Border>
