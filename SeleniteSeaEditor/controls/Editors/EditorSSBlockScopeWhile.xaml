<Window x:Class="SeleniteSeaEditor.controls.Editors.EditorSSBlockScopeWhile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SeleniteSeaEditor.controls.Editors"
        mc:Ignorable="d"
        Background="#232133"
        Title="While Loop Editor" Height="450" Width="800">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top">
            <Label Content="Comparation Type" DockPanel.Dock="Top" Foreground="LightGray"/>
            <ComboBox x:Name="ComparisonType" Background="#181924" IsEditable="True" SelectionChanged="ComparisonType_SelectionChanged"/>
        </StackPanel>
        <Button DockPanel.Dock="Bottom" Content="Accept" Background="#232133" Foreground="LightGray" BorderBrush="Black" Margin="0,5,0,0" HorizontalAlignment="Left" Padding="2" Click="Button_Click"/>
        <Border Margin="0,5,0,0" BorderThickness="1" BorderBrush="Black" Background="#181924">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="ArgBox"/>
            </ScrollViewer>
        </Border>
    </DockPanel>
</Window>
