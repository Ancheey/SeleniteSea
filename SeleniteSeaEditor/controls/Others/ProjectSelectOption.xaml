<Button x:Class="SeleniteSeaEditor.controls.Others.ProjectSelectOption"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SeleniteSeaEditor.controls.Others"
             mc:Ignorable="d" 
            BorderBrush="LightGray" BorderThickness="1" HorizontalContentAlignment="Left" Background="Transparent"
             d:DesignHeight="50" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label x:Name="ProjectName" Content="ProjectName" Foreground="White" FontWeight="Bold" FontSize="16" Panel.ZIndex="1"/>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,-10,0,0">
            <Label x:Name="DisplayDate" FontSize="10" Content="6.12.2024" Foreground="Gray" Width="70"/>
            <Label x:Name="ProjectSource" Content="Project source" Foreground="Gray" FontSize="10" />
        </StackPanel>
        
    </Grid>
</Button>
