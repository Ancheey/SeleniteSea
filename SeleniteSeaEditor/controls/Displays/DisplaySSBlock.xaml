<local:DisplayBlock x:Class="SeleniteSeaEditor.controls.Displays.DisplaySSBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SeleniteSeaEditor.controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" x:Name="PrimaryPanel" >
        <Label Content="‣" Foreground="Yellow" Margin="0,0,-5,0" x:Name="PointerIcon"/>
        <Label Content="🔧" Foreground="Yellow" Margin="0,0,-5,0" x:Name="WrenchIcon" Width="0" Cursor="Hand"/>
        <Label Content="Default Block" Foreground="Yellow" x:Name="BlockTitle"/>
    </StackPanel>
</local:DisplayBlock>
