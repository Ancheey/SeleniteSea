<Window x:Class="SeleniteSeaEditor.controls.NewBlockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SeleniteSeaEditor.controls"
        mc:Ignorable="d"
        Background="#181924"
        Title="Block Choice Dialog" Height="300" Width="500" ResizeMode="NoResize" ShowInTaskbar="False">
    <Border BorderThickness="1" BorderBrush="White">
        <DockPanel>
            <TextBox DockPanel.Dock="Top" Background="#232133" BorderBrush="Black" BorderThickness="0.6" Margin="5,5,5,5" Foreground="LightGray"/>
            <ListBox Background="#232133" x:Name="ActionSelectionListbox" Margin="5,0,5,5"/>
        </DockPanel>
    </Border>
</Window>
